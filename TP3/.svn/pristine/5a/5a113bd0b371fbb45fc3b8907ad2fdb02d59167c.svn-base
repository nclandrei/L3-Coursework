body {
  height: 100%;
  width: 100%;
  margin: auto;
  font-family: Lato;
}

#header {
  width: 1000px;
  height: 120px;
  padding-bottom: 5px;
  margin: auto;
}

#title {
  display: none;
  padding-top: 30px;
  float: left;
  color: #4E914D;
  font-weight: bold;
  font-size: 22px;
  text-transform: uppercase;
}

.titletext {
  font-size: 14px;
}

#menu {
  width: 100%;
  background-color: #468245;
  text-align: center;
}

.menubutton {
  display: inline-block;
  width: auto;
  height: inherit;
  padding: 15px;
  font-size: 18px;
  color: white;
  cursor: pointer;
}

.menubutton:hover {
  background-color: #2e572e;
}

#logo {
  float: left;
  width: 375px;
  height: 120px;
}

#searchbox {
  margin-top: 45px;
  float: right;
  font-size: 14px;
  width: 230px;
  background-color: #68696b;
  display: inline-block;
  font-size: 14px;
}

#search {
  float: left;
  color: white;
  background-color: #68696b;
  padding: 10px;
  border: none;
}

#searchbutton {
  background-color: #468245;
  padding: 10px;
  display: inline-block;
  float: right;
  cursor: pointer;
  color: white;
}

#content {
  height: auto;
  width: 1200px;
  margin: auto;
  display: block;
}

#footer {
  bottom: 0;
  padding-top: 20px;
  padding-bottom: 20px;
  background-color: #f5f5f5;
  width: 100%;
}

#footerwrapper {
bottom: 0;
  width: 1000px;
  margin: auto;
  color: #555555;
}

#footerwrapper > a {
  color: #555555;
}

#footerwrapper > a:hover {
  color: #366535;
}

#footerwrapper > a > img {
  float: right;
  padding-left: 10px;
}

#categorywrapper {
  display: none;
  margin: auto;
  width: 820px;
}

.category {
  padding-left: 10px;
  text-align: center;
  margin: 10px;
  width: 240px;
  background-color: #468245;
  color: white;
  cursor: pointer;
  display: inline-block;
}

.category > span {
  padding-left: 15px;
  display: inline-block;
  float: left;
  font-size: 18px;
}

.post {
	margin: 5px;
	padding: 5px;
	border: 1px solid green;
}

.category > .fa {
  display: inline-block;
  float: left;
  font-size: 50px;
  margin-top: 10px;
  margin-bottom: 10px;
}
